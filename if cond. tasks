Task 4:
#Get one string from user
#extract middle letter of the string
#check whether middle letter is vowel or no

a=input()
s=int(len(a)/2)
print(a[s])
if (a[s]=='a' or a[s]=='e' or  a[s]=='i'or a[s]=='o'or a[s]=='u'):
    print("vowel")
else:
    print("not a vowel")
    
Task5:
#Get one string from user
#Find the middle letter
#find ascii value for the middle letter
#check whether ascii value is odd or even

a=input("enter the string:")
b=int(len(a)/2)
val=ord(a[b])
print(val)
if val%2==0:
    print("even")
else:
    print("odd")

Task6:
#get one string from user
#check whether length of the string is odd or even

a=input("enter the string:")
b=int(len(a)/2)
if b%2==0:
    print("even")
else:
    print("odd")

Task 7:

a=int(input("enter the mark:"))
if a>=0 and a<=100:      
    print("valid mark")                       
    if a>=50:
            print("pass")
            if a>=90 and a<=100:
                if a<95:
                    print("A-")
                else:
                    print("A+")
            elif a>=80 and a<=89:
                if a<85:
                    print("B-")
                else:
                    print("B-")
            elif a>=70 and a<=79:
                 if a<75:
                     print("C-")
                 else:
                     print("C+")
            elif a>=60 and a<=69:
                if a<85:
                    print("D-")
                else:
                    print("D+")
            elif a>=50 and a<=59:
                if a<55:
                    print("E-")
                else:
                    print("E+")
            
    else:
            print("fail")
else:
    print("invalid mark")




Task10:
#two strings from user

#mathematics ===> 4 vowels
#science ==> 3 vowels

#both are equal count or not equal


a=input("enter string1:")
b=input("enter string2:")
A=a.count('a')+a.count('e')+a.count('i')+a.count('o')+a.count('u')
print(A)
B=b.count('a')+b.count('e')+b.count('i')+b.count('o')+b.count('u')
print(B)
if A==B:
    print("equal count")
else:
    print("not equal")

Task11:


#get one integer from user (3 digit int only)
#armstrong or no (without using loops)

#153 ===> 1^3 + 5^3 + 3^3
#370 ===> 3^3 + 7^3 + 0^3
#371 ====> 3^3 + 7^3 + 1^3

a=input()
x=int(a[0])
b=int(a[1])
c=int(a[2])
t=int(a)
print(t)
z=(x**3)+(b**3)+(c**3)
print(z)
if(t==z):
    print("armstrong num")
else:
    print("not an armstrong num")

Task12:

List #[123, 124, 125,130,131]
length of list odd or even

a=[123, 124, 125,130,131]
b=len(a)
print(b)
if (b%2)==0:
    print("length of list is even")

else:
    print("length of list is odd")


Range function Task:

#Using Range function  print multiples of 5 from 0 to 75
#Using Range function  print multiples of 8 from 0 to 72

#Using Range function  print multiples of 5 from 75 to 0
#Using Range function  print multiples of 8 from 96 to 72

print(list(range(0,76,5)))

print(list(range(0,72,8)))

print(list(range(75,0,5)))

print(list(range(96,72,8)))
